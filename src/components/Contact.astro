<section class="contact scroll-animate" id="contact">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Contacto.</h2>
      <div class="section-line"></div>
    </div>

    <div class="contact-grid">
      <!-- GitHub Card -->
      <div class="contact-card github-card">
