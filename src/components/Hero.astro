<section class="hero" id="home">
  <div class="hero-container container">
    <div class="hero-content">
      <div class="hero-decorator">
        <div class="decorator-dot"></div>
        <div class="decorator-line"></div>
      </div>
      
      <div class="hero-text">
        <h1 class="hero-title animate-fade-in-up">
          Hola, Soy <span class="text-gradient">Fernando</span>
        </h1>
        <p class="hero-subtitle animate-fade-in-up">
          Desarrollador<br class="mobile-br" />
          <span>Full Stack</span>
        </p>
        <p class="hero-description animate-fade-in-up">
          Creando experiencias web modernas con Angular, .NET, React y tecnolog√≠as de vanguardia
        </p>
        <div class="hero-cta animate-fade-in-up">
          <a href="#projects" class="btn btn-primary">Ver Proyectos</a>
          <a href="#contact" class="btn btn-outline">Contactar</a>
        </div>
      </div>
    </div>
    
    <div class="hero-visual">
      <div class="hero-image-wrapper">
        <div class="floating-shape shape-1"></div>
        <div class="floating-shape shape-2"></div>
        <div class="floating-shape shape-3"></div>
        <div class="hero-avatar">
          <div class="avatar-glow"></div>
          <div class="avatar-content">
            <svg class="code-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M8 6L4 12L8 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M16 6L20 12L16 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M14 4L10 20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="scroll-indicator">
    <a href="#about" aria-label="Scroll to about section">
      <div class="scroll-mouse">
        <div class="scroll-wheel"></div>
      </div>
    </a>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    padding-top: 80px;
    overflow: hidden;
  }

  .hero-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    display: flex;
    gap: 1.5rem;
  }

  .hero-decorator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
    margin-top: 0.5rem;
  }

  .decorator-dot {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: var(--color-accent);
    box-shadow: 0 0 20px rgba(245, 95, 23, 0.5);
    animation: pulse 2s infinite;
  }

  .decorator-line {
    width: 2px;
    height: 200px;
    background: linear-gradient(to bottom, var(--color-accent), var(--color-accent-light));
  }

  .hero-text {
    flex: 1;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 5rem);
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 1rem;
    animation-delay: 0.1s;
  }

  .hero-subtitle {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    animation-delay: 0.2s;
  }

  .hero-subtitle span {
    color: var(--color-text-primary);
  }

  .mobile-br {
    display: none;
  }

  .hero-description {
    font-size: clamp(1rem, 1.5vw, 1.125rem);
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    max-width: 600px;
    line-height: 1.8;
    animation-delay: 0.3s;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    animation-delay: 0.4s;
  }

  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-image-wrapper {
    position: relative;
    width: 400px;
    height: 400px;
    animation: float 6s ease-in-out infinite;
  }

  .floating-shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
    animation: float 4s ease-in-out infinite;
  }

  .shape-1 {
    width: 120px;
    height: 120px;
    background: var(--color-accent);
    top: 0;
    left: 0;
    animation-delay: 0s;
  }

  .shape-2 {
    width: 80px;
    height: 80px;
    background: var(--color-accent-light);
    bottom: 50px;
    right: 50px;
    animation-delay: 1s;
  }

  .shape-3 {
    width: 60px;
    height: 60px;
    background: #667eea;
    top: 50px;
    right: 0;
    animation-delay: 2s;
  }

  .hero-avatar {
    position: relative;
    width: 300px;
    height: 300px;
    margin: 50px;
  }

  .avatar-glow {
    position: absolute;
    inset: -20px;
    background: var(--gradient-primary);
    border-radius: 50%;
    filter: blur(40px);
    opacity: 0.3;
    animation: pulse 3s ease-in-out infinite;
  }

  .avatar-content {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: var(--color-tertiary);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 3px solid rgba(245, 95, 23, 0.3);
    overflow: hidden;
  }

  .code-icon {
    width: 150px;
    height: 150px;
    color: var(--color-accent);
    animation: float 3s ease-in-out infinite;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
  }

  .scroll-mouse {
    width: 30px;
    height: 50px;
    border: 2px solid var(--color-text-secondary);
    border-radius: 15px;
    position: relative;
    cursor: pointer;
    transition: border-color var(--transition-fast);
  }

  .scroll-mouse:hover {
    border-color: var(--color-accent);
  }

  .scroll-wheel {
    width: 4px;
    height: 10px;
    background: var(--color-text-secondary);
    border-radius: 2px;
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    animation: scroll-wheel 2s ease-in-out infinite;
  }

  @keyframes scroll-wheel {
    0%, 100% {
      top: 8px;
      opacity: 1;
    }
    50% {
      top: 25px;
      opacity: 0.5;
    }
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .hero-container {
      gap: 3rem;
    }

    .hero-image-wrapper {
      width: 350px;
      height: 350px;
    }

    .hero-avatar {
      width: 250px;
      height: 250px;
    }

    .code-icon {
      width: 120px;
      height: 120px;
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: 120px 0 60px;
    }

    .hero-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .hero-content {
      order: 1;
    }

    .hero-visual {
      order: 2;
    }

    .mobile-br {
      display: block;
    }

    .decorator-line {
      height: 150px;
    }

    .hero-image-wrapper {
      width: 280px;
      height: 280px;
    }

    .hero-avatar {
      width: 200px;
      height: 200px;
      margin: 40px;
    }

    .code-icon {
      width: 100px;
      height: 100px;
    }

    .floating-shape {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .hero-decorator {
      display: none;
    }

    .hero-cta {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      text-align: center;
    }

    .scroll-indicator {
      bottom: 1rem;
    }
  }
</style>
