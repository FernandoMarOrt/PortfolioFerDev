<section class="hero" id="home">
  <div class="hero-container container">
    <div class="hero-content">
      <div class="hero-decorator">
        <div class="decorator-dot"></div>
        <div class="decorator-line"></div>
      </div>
      
      <div class="hero-text">
        <h1 class="hero-title animate-fade-in-up">
          Hola, Soy <span class="text-gradient">Fernando</span>
        </h1>
        <p class="hero-subtitle animate-fade-in-up">
          Desarrollador<br class="mobile-br" />
          <span>Full Stack</span>
        </p>
        <p class="hero-description animate-fade-in-up">
          Creando experiencias y web modernas con Angular y .NET
        </p>
        <div class="hero-cta animate-fade-in-up">
          <a href="#projects" class="btn btn-primary">Ver Proyectos</a>
          <a href="#contact" class="btn btn-outline">Contactar</a>
        </div>
      </div>
    </div>
    
    <div class="hero-visual">
      <div class="hero-image-wrapper">
        <div class="hero-avatar">
          <div class="avatar-glow"></div>
          <div class="avatar-content">
            <img src="/assets/astronauta.webp" alt="Avatar de Fernando Martinez" class="avatar-image" loading="lazy" />
          </div>
        </div>
      </div>
    </div>
    
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    padding-top: 80px;
    overflow: hidden;
  }

  .hero-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    display: flex;
    gap: 1.5rem;
  }

  .hero-decorator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
    margin-top: 0.5rem;
  }

  .decorator-dot {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: var(--color-accent);
    box-shadow: 0 0 20px rgba(245, 95, 23, 0.5);
    animation: pulse 2s infinite;
  }

  .decorator-line {
    width: 2px;
    height: 200px;
    background: linear-gradient(to bottom, var(--color-accent), var(--color-accent-light));
  }

  .hero-text {
    flex: 1;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 5rem);
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 1rem;
    animation-delay: 0.1s;
  }

  .hero-subtitle {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    animation-delay: 0.2s;
  }

  .hero-subtitle span {
    color: var(--color-text-primary);
  }

  .mobile-br {
    display: none;
  }

  .hero-description {
    font-size: clamp(1rem, 1.5vw, 1.125rem);
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    max-width: 600px;
    line-height: 1.8;
    animation-delay: 0.3s;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    animation-delay: 0.4s;
  }

  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-image-wrapper {
    position: relative;
    width: 520px;
    height: 520px;
    animation: float 6s ease-in-out infinite;
  }

  .hero-avatar {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .avatar-glow {
    position: absolute;
    inset: -30px;
    background: radial-gradient(circle, rgba(245, 95, 23, 0.4) 0%, rgba(255, 145, 77, 0.2) 50%, transparent 70%);
    border-radius: 50%;
    filter: blur(40px);
    animation: pulse 3s ease-in-out infinite;
  }

  .avatar-content {
    position: relative;
    width: 460px;
    height: 460px;
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.4), rgba(15, 23, 42, 0.6));
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(245, 95, 23, 0.3);
    overflow: hidden;
    animation: morph 8s ease-in-out infinite;
    box-shadow: 
      0 0 40px rgba(245, 95, 23, 0.3),
      inset 0 0 30px rgba(245, 95, 23, 0.1);
  }

  .avatar-image {
    width: 120%;
    height: 120%;
    object-fit: contain;
    position: relative;
    z-index: 1;
    filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.5));
    animation: rotate-slight 20s linear infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    25% {
      transform: translateY(-20px) rotate(2deg);
    }
    50% {
      transform: translateY(-10px) rotate(-2deg);
    }
    75% {
      transform: translateY(-30px) rotate(1deg);
    }
  }

  @keyframes morph {
    0%, 100% {
      border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    }
    25% {
      border-radius: 58% 42% 75% 25% / 76% 46% 54% 24%;
    }
    50% {
      border-radius: 50% 50% 33% 67% / 55% 27% 73% 45%;
    }
    75% {
      border-radius: 33% 67% 58% 42% / 63% 68% 32% 37%;
    }
  }

  @keyframes rotate-slight {
    0%, 100% {
      transform: rotate(0deg) scale(1);
    }
    25% {
      transform: rotate(5deg) scale(1.02);
    }
    50% {
      transform: rotate(-5deg) scale(1);
    }
    75% {
      transform: rotate(3deg) scale(1.02);
    }
  }


  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
  }


  .scroll-wheel {
    width: 4px;
    height: 10px;
    background: var(--color-text-secondary);
    border-radius: 2px;
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    animation: scroll-wheel 2s ease-in-out infinite;
  }

  @keyframes scroll-wheel {
    0%, 100% {
      top: 8px;
      opacity: 1;
    }
    50% {
      top: 25px;
      opacity: 0.5;
    }
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .hero-container {
      gap: 3rem;
    }

    .hero-image-wrapper {
      width: 400px;
      height: 400px;
    }

    .avatar-content {
      width: 340px;
      height: 340px;
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: 120px 0 60px;
    }

    .hero-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .hero-content {
      order: 1;
    }

    .hero-visual {
      order: 2;
    }

    .mobile-br {
      display: block;
    }

    .decorator-line {
      height: 150px;
    }

    .hero-image-wrapper {
      width: 340px;
      height: 340px;
    }

    .avatar-content {
      width: 300px;
      height: 300px;
    }
  }

  @media (max-width: 480px) {
    .hero-decorator {
      display: none;
    }

    .hero-cta {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      text-align: center;
    }

    .scroll-indicator {
      bottom: 1rem;
    }

    .hero-image-wrapper {
      width: 280px;
      height: 280px;
    }

    .avatar-content {
      width: 240px;
      height: 240px;
    }
  }
</style>
