---
const technologies = [
  { name: "HTML 5", icon: "/assets/tech/html.png", category: "Frontend", color: "#60a5fa" },
  { name: "CSS 3", icon: "/assets/tech/css.png", category: "Frontend", color: "#60a5fa" },
  { name: "JavaScript", icon: "/assets/tech/javascript.png", category: "Frontend", color: "#fbbf24" },
  { name: "TypeScript", icon: "/assets/tech/typescript.png", category: "Frontend", color: "#60a5fa" },
  { name: "Tailwind CSS", icon: "/assets/tech/tailwind.png", category: "Frontend", color: "#38bdf8" },
  { name: "C#", icon: "/assets/tech/csharp.png", category: "Backend", color: "#a855f7" },
  { name: "Node JS", icon: "/assets/tech/nodejs.png", category: "Backend", color: "#84cc16" },
  { name: "Angular", icon: "/assets/tech/angular.png", category: "Framework", color: "#dc2626" },
  { name: ".NET", icon: "/assets/tech/net.png", category: "Framework", color: "#8b5cf6" },
  { name: "Git", icon: "/assets/tech/git.png", category: "Tools", color: "#f97316" },
  { name: "Visual Studio", icon: "/assets/tech/visualestudio.png", category: "Tools", color: "#3b82f6" },
  { name: "Postman", icon: "/assets/tech/postman.png", category: "Tools", color: "#f97316" },
  { name: "Docker", icon: "/assets/tech/docker.png", category: "DevOps", color: "#0ea5e9" },
  { name: "Figma", icon: "/assets/tech/figma.png", category: "Design", color: "#a855f7" },
  { name: "PostgreSQL", icon: "/assets/tech/postgre.png", category: "Database", color: "#06b6d4" },
  { name: "MySQL", icon: "/assets/tech/mysql.png", category: "Database", color: "#3b82f6" }
];
---

<section class="tech scroll-animate" id="tech">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Tecnologías.</h2>
      <div class="section-line"></div>
    </div>

    <p class="tech-description">
      Estas son las tecnologías con las que trabajo regularmente para crear 
      soluciones web modernas y eficientes.
    </p>

    <div class="tech-grid">
      {technologies.map((tech, index) => (
        <div class="tech-card scroll-animate" style={`animation-delay: ${index * 0.05}s; --card-color: ${tech.color}`}>
          <div class="tech-icon-wrapper">
            <img src={tech.icon} alt={tech.name} class="tech-icon-img" loading="lazy" />
          </div>
          <h3 class="tech-name">{tech.name}</h3>
          <span class="tech-category">{tech.category}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .tech {
    position: relative;
  }

  .section-header {
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3.75rem);
    font-weight: 800;
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
  }

  .section-line {
    width: 100px;
    height: 4px;
    background: var(--gradient-primary);
    border-radius: 2px;
  }

  .tech-description {
    font-size: clamp(1rem, 1.5vw, 1.125rem);
    color: var(--color-text-secondary);
    line-height: 1.8;
    max-width: 800px;
    margin-bottom: 3rem;
  }

  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 1.5rem;
  }

  .tech-card {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 2rem 1.5rem;
    border-radius: var(--border-radius-md);
    border: 2px solid transparent;
    border-top: 3px solid var(--card-color);
    box-shadow: var(--glass-shadow);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    transition: all var(--transition-normal);
    position: relative;
    overflow: visible;
  }

  .tech-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: var(--border-radius-md);
    padding: 2px;
    background: linear-gradient(180deg, var(--card-color), transparent);
    -webkit-mask: 
      linear-gradient(#fff 0 0) content-box, 
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .tech-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
    border-color: var(--card-color);
  }

  .tech-card:hover::before {
    opacity: 0.5;
  }

  .tech-icon-wrapper {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 50%;
    border: 2px solid var(--card-color);
    position: relative;
    transition: all var(--transition-normal);
    padding: 1rem;
  }

  .tech-card:hover .tech-icon-wrapper {
    transform: scale(1.1);
    box-shadow: 0 0 20px var(--card-color);
    border-color: var(--card-color);
  }

  .tech-icon-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .tech-name {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-primary);
    text-align: center;
    margin: 0;
  }

  .tech-category {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--card-color);
    text-align: center;
    padding: 0.25rem 0.75rem;
    background: var(--card-color);
    background: linear-gradient(135deg, var(--card-color), transparent);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    border: 1px solid var(--card-color);
    border-radius: var(--border-radius-full);
    opacity: 0.8;
  }

  @media (max-width: 1024px) {
    .tech-grid {
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 1.25rem;
    }
  }

  @media (max-width: 768px) {
    .tech-grid {
      grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
      gap: 1rem;
    }

    .tech-card {
      padding: 1.5rem 1rem;
    }

    .tech-icon-wrapper {
      width: 60px;
      height: 60px;
    }

    .tech-name {
      font-size: 1rem;
    }

    .tech-category {
      font-size: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .tech-grid {
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
      gap: 0.875rem;
    }

    .tech-card {
      padding: 1.25rem 0.75rem;
    }

    .tech-icon-wrapper {
      width: 50px;
      height: 50px;
    }

    .tech-name {
      font-size: 0.875rem;
    }

    .tech-category {
      font-size: 0.7rem;
      padding: 0.2rem 0.5rem;
    }
  }
</style>
